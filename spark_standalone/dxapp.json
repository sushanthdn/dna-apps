{
  "name": "spark_standalone",
  "title": "Apache Spark Standalone Cluster",
  "summary": "Application that will spawn apache spark cluster and allow you to run spark application",
  "dxapi": "1.0.0",
  "version": "0.0.2",
  "inputSpec": [
    {
      "name": "application",
      "label": "Spark Application Executable ",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.jar"
      ],
      "help": ""
    },
    {
      "name": "class",
      "label": "The entry point for your application",
      "class": "string",
      "optional": false,
      "default": "org.apache.spark.examples.SparkPi",
      "help": "(e.g. org.apache.spark.examples.SparkPi)"
    },
    {
      "name": "in_files",
      "label": "Input files",
      "class": "array:file",
      "patterns": [
        "*"
      ],
      "optional": true
    },
    {
      "name": "app_args",
      "label": "Arguments passed to the main method of your main class, if any",
      "class": "string",
      "default": "10",
      "optional": true,
      "help": ""
    },
    {
      "name": "workers",
      "label": "Number of workers",
      "class": "int",
      "optional": true,
      "default": 1,
      "choices": [
        1,
        2,
        3,
        4
      ],
      "help": ""
    },
    {
      "name": "executor_memory",
      "label": "Executor Memory",
      "class": "string",
      "optional": true,
      "default": "1g",
      "choices": [
        "1g",
        "2g"
      ],
      "help": ""
    },
    {
      "name": "cores",
      "label": "Executor cores",
      "class": "int",
      "optional": true,
      "default": 1,
      "choices": [
        1
      ],
      "help": ""
    }
  ],
  "outputSpec": [],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "interpreter": "bash",
    "file": "src/spark_standalone.sh",
    "systemRequirements": {
      "*": {
        "instanceType": "mem1_ssd1_x4"
      }
    },
    "assetDepends": [
      {
        "id": "record-F7Y7Jf007zzz3fb89Vx4PvV2"
      }
    ],
    "distribution": "Ubuntu",
    "release": "14.04"
  },
  "access": {
    "project": "CONTRIBUTE",
    "network": [
      "*"
    ]
  }
}
