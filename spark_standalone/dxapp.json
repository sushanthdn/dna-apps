{
  "name": "spark_standalone",
  "title": "Apache Spark Standalone Cluster",
  "summary": "Application that will spawn apache spark cluster and allow you to run spark application",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "application",
      "label": "Spark Application Executable ",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.jar"
      ],
      "help": ""
    },
    {
      "name": "class",
      "label": "The entry point for your application",
      "class": "string",
      "optional": false,
      "default" : "org.apache.spark.examples.SparkPi",
      "help": "(e.g. org.apache.spark.examples.SparkPi)"
    },
    {
      "name": "app_args",
      "label": "Arguments passed to the main method of your main class, if any",
      "class": "string",
      "optional": true,
      "help": ""
    },
    {
      "name": "executors",
      "label": "Number of Executors",
      "class": "int",
      "optional": true,
      "default": 1,
      "choices": [1, 2, 3, 4],
      "help": ""
    }
  ],
  "outputSpec": [],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "interpreter": "bash",
    "file": "src/spark_standalone.sh",
    "systemRequirements": {
      "*": {
        "instanceType": "mem1_ssd1_x4"
      }
    },
    "assetDepends": [
      {
        "id": "record-F7P8vf80K0g6X90G92yG4pB1"
      }
    ],
    "distribution": "Ubuntu",
    "release": "14.04"
  },
  "access": {
    "project": "CONTRIBUTE",
    "network": [
      "*"
    ]
  }
}
